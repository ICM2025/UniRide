<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Encabezado: flecha + título -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_button_circle"
                android:src="@drawable/ic_arrow_left"
                android:contentDescription="Volver"
                android:tint="@color/main_color" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acerca de nosotros"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- Logo -->
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo"
            android:contentDescription="Logo UniRide"
            android:layout_marginBottom="8dp" />

        <!-- Nombre y versión -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UniRide"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/text_color"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v1.0.0"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginBottom="16dp" />

        <!-- Descripción -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UniRide es una app de movilidad colaborativa para estudiantes universitarios. Conecta pasajeros y conductores de forma segura y eficiente."
            android:textSize="15sp"
            android:textColor="@color/text_color"
            android:lineSpacingExtra="4dp"
            android:textAlignment="center"
            android:paddingVertical="32dp" />

        <!-- Contacto -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacto: soporte@uniride.com"
            android:textColor="@color/main_color"
            android:textSize="14sp"
            android:autoLink="email"
            android:layout_marginBottom="24dp" />

        <!-- Enlaces -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Términos y condiciones"
            android:textColor="@color/main_color"
            android:textSize="15sp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Política de privacidad"
            android:textColor="@color/main_color"
            android:textSize="15sp" />
    </LinearLayout>
</ScrollView>
