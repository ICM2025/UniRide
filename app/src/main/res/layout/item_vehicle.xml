<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:elevation="4dp"
    app:cardCornerRadius="16dp"
    android:background="@color/component_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_car"
            android:contentDescription="Ícono de vehículo"
            android:layout_marginEnd="16dp"
            app:tint="@color/main_color" />

        <!-- Info del carro -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_model_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toyota Corolla"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_plate_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placa: ABC123 - Año: 2021"
                android:textColor="@color/text_color"
                android:textSize="14sp"
                android:alpha="0.8" />
        </LinearLayout>

        <!-- Ícono opcional para editar o más acciones -->
<!--        <ImageView-->
<!--            android:id="@+id/btn_more"-->
<!--            android:layout_width="24dp"-->
<!--            android:layout_height="24dp"-->
<!--            android:src="@drawable/ic_more_vert"-->
<!--            android:tint="@color/text_color"-->
<!--            android:contentDescription="Opciones del vehículo" />-->
    </LinearLayout>
</androidx.cardview.widget.CardView>
