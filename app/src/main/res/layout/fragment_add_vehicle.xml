<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="32dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_button_circle"
                android:src="@drawable/ic_arrow_left"
                android:contentDescription="Volver"
                app:tint="@color/main_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrar vehículo"
                android:textColor="@color/text_color"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- Marca -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marca"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext_rounded"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Modelo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modelo"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/input_model"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Ej. Corolla"
            android:background="@drawable/bg_edittext_rounded"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/text_color"
            android:textColorHint="#808080" />

        <!-- Año -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Año"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/input_year"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Ej. 2022"
            android:inputType="number"
            android:background="@drawable/bg_edittext_rounded"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/text_color"
            android:textColorHint="#808080" />

        <!-- Color -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/input_color"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Ej. Blanco"
            android:background="@drawable/bg_edittext_rounded"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/text_color"
            android:textColorHint="#808080" />

        <!-- Placa -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Placa"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/input_plate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Ej. ABC123"
            android:background="@drawable/bg_edittext_rounded"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="24dp"
            android:textColor="@color/text_color"
            android:textColorHint="#808080" />

        <!-- Botón guardar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:backgroundTint="@color/main_color"
            android:textColor="@android:color/white"
            app:cornerRadius="24dp"
            android:textAllCaps="false"
            app:icon="@drawable/ic_check"
            app:iconGravity="textEnd"
            app:iconTint="@android:color/white" />

        <!-- Imagenes del vehículo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Imágenes"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/images_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btn_add_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar imagen"
            app:icon="@drawable/ic_plus"
            android:backgroundTint="@color/secondary_color"
            android:textColor="@color/text_color"
            android:textAllCaps="false"
            android:layout_marginBottom="16dp" />


    </LinearLayout>
</ScrollView>
